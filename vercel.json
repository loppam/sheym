{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "functions": {
    "api/submit-form.js": {
      "runtime": "nodejs20.x",
      "maxDuration": 30
    },
    "api/test.js": {
      "runtime": "nodejs20.x",
      "maxDuration": 10
    }
  }
}
